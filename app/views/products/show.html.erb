<% provide(:title, @product.name) %>
<div class="away-header col-xs-12 col-sm-12 col-md-12">
  <div class="col-xs-3 col-sm-3 col-md-3"></div>
  <div class="col-xs-6 col-sm-6 col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading"><b><%= @product.name %></b></div>
      <div class="panel-body product-info">
        <div>
        <%= image_tag @product.image.url, size: "600x350", class: "img-responsive img-rounded" if @product.image? %>
        </div>
        <div class="product-info">
        <b><%= t("product.price") %>: <%= @product.price %></b>
        <p><%= @product.description %></p>
        </div>
        <div class="cart-logo text-center">
          <%= link_to cart_path(@product), remote: true,
            method: "put", class: "btn btn-success" do %>
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <%= t "cart.btn-addtocart" %>
          <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
