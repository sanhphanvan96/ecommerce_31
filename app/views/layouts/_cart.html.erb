<div class="cart-item text-center">
  <% if @cart.present? %>
  <div>
    <% @cart.items.each do |item| %>
      <li id="item-<%= item.product_id %>">
        <span class="item">
          <span class="item-left">
            <%= image_tag item.product.image.thumb_small %><br>
            <%= link_to item.product.name, item.product %>
          </span>
          <span class="item-left item-infor">
            <table class="table">
              <thead>
                <tr>
                  <th><%= t ".quantity" %></th>
                  <th><%= t ".price" %></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><span><%= item.quantity %></span></td>
                  <td>
                    <span><%= number_to_currency item.total_price %></span>
                  </td>
                  <td>
                    <%= link_to t("cart.btn-sub"), edit_cart_path(item.product),
                      remote: true,
                      class: "pull-right btn btn-xs btn-primary" %>
                    <%= link_to t("cart.btn-add"), cart_path(item.product),
                      remote: true, method: "put",
                      class: "pull-right btn btn-xs btn-primary" %>
                  </td>
                </tr>
              </tbody>
            </table>
          </span>
          <span class="item-right">
            <%= link_to t("cart.btn-delete"), cart_path(item.product_id),
              method: :delete, remote: true,
              class: "btn btn-xs btn-danger pull-right" %>
          </span>
        </span>
      </li>
    <% end %>
      <span class="item-right pull-right">
        <%= t "cart.total" %> : <%= number_to_currency @cart.total_price %>
      </span>
    </div>
    <div>
      <%= link_to t("button.create_order"), new_order_path,
        class: "btn btn-primary" %>
    </div>
  <% else %>
    <div>
      <span><%= t "cart.empty" %></span>
    </div>
  <% end %>
</div>
