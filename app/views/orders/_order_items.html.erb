<table class="table table-bordered ">
  <thead>
    <tr>
      <th><%= t "order.index" %></th>
      <th><%= t "order.image" %></th>
      <th><%= t "order.product_name" %></th>
      <th><%= t "order.quantity" %></th>
      <th><%= t "order.price" %></th>
    </tr>
  </thead>
  <tbody>
    <% order_items.each_with_index do |item, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= image_tag(item.product.image, size: "90x60") %></td>
        <td><%= item.product.name %></td>
        <td class="text-center"><%= item.quantity %></td>
        <td class="text-center">
          <strong><%= number_to_currency item.total_price %></strong></td>
      </tr>
    <% end %>
  </tbody>
</table>
