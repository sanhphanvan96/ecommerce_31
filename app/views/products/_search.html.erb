<%= form_tag home_path, method: :get, remote: true do %>
<div class="col-sm-6 col-md-6">
  <%= text_field_tag :search, params[:search], placeholder: t("search"),
    class: "form-control" %>
</div>
<div  class="col-sm-2 col-md-2">
  <%= select_tag :category_id,
    options_from_collection_for_select(Category.main_categories, :id, :name),
    prompt: t("product.all_categories"), class: "form-control" %>
</div>
<div class="col-sm-1 col-md-1">
  <%= submit_tag t("search"), class: "btn btn-primary btn-md" %>
</div>
<% end %>
