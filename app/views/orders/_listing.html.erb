<div class="panel panel-default">
  <div class="panel-body">
    <% if order.status %>
      <span class="label label-success">
        <%= t "order.status.done" %>
      </span>
    <% else %>
      <span class="label label-warning">
        <%= t "order.status.pending" %>
      </span>
    <% end %>
  </div>
  <div class="panel-body">
    <%= render "order_items", order_items: order.order_details %>
    <div class="pull-right">
      <h4><b><%= t "order.total" %>: </b><%= number_to_currency order.total_payment %></h4>
    </div>
  </div>
</div>
