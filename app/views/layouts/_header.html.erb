<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("title.default"), home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <%= render partial: "/categories/category"%>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t("static_pages.home"), home_path %></li>
      <li><%= link_to t("static_pages.about"), about_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("account.profile"), current_user %></li>
              <li>
                <%= link_to t("account.setting"), edit_user_path(current_user) %>
              </li>
              <li class="divider"></li>
              <% if current_user.is_admin? %>
                <li>
                  <%= link_to t("account.admin.manage_user"),
                    users_path %>
                  <%= link_to t("account.admin.manage_product"),
                    products_path %>
                </li>
                <li class="divider"></li>
              <% end %>
              <li>
                <%= link_to t("account.log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("account.log_in"), login_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"
            role="button" aria-expanded="false">
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <%= t "Items" %>
            (<span class="items-count"><%= @cart.count %></span>)
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu dropdown-cart" role="menu">
            <%= render "layouts/cart" %>
            <li class="divider"></li>
            <li>
              <%= link_to t(".view_cart"), carts_path, class: "text-center" %>
            </li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
